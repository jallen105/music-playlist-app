<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title><%= playlist.name %></title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1><%= playlist.name %></h1>
    
        <div>
            <div>
              <a href="/users/<%= user._id %>/playlists/<%= playlist._id %>/edit">Edit Playlist</a>
              <form action="/users/<%= user._id %>/playlists/<%= playlist._id %>?_method=DELETE" method="POST">
                <button type="submit">Delete Playlist</button>
              </form>
            </div>

        <% if (playlist.songList.length > 0) { %>
            <ul>
              <% playlist.songList.forEach((song) => { %>
                <li>Title: <%= song.title %></li>
                <li>Artist: <%= song.artist %></li>
                <li>Genre: <%= song.genre %></li>
              <% }) %>
            </ul>          
        
        <% } else { %>
            <p>There are no songs in this playlist.</p>
        <% } %>
    </div>
  </body>
</html>