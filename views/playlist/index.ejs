<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>My Playlists</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Welcome to your playlists</h1>
    <a href="/users/<%= user._id %>/playlists/new">Add New Playlist</a>
    <h3>Your Playlists:</h3>
    <% if (playlists.length > 0) { %>
        <div>
          <% playlists.forEach((list) => { %>
            <div>
              <a href="/users/<%= user._id %>/playlists/<%= list._id %>">
                <%= list.name %>
              </a>
              <a href="/users/<%= user._id %>/playlists/<%= list._id %>/edit">Edit Playlist</a>
              <form action="/users/<%= user._id %>/playlists/<%= list._id %>?_method=DELETE" method="POST">
                <button type="submit">Delete Playlist</button>
              </form>
            </div>        
          <% }) %>
        </div>
    <% } else { %>
      <p>There are no playlists.</p>
    <% } %>

  </body>
</html>